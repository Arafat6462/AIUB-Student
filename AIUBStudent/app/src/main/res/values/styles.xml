<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appBar_BottomNavigationColor</item>
        <item name="colorPrimaryDark">@color/appStatusBarColor</item>
        <item name="colorAccent">@color/colorAccent</item>

        // transparent the status bar and change the color
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowLightStatusBar">true</item>-->
    </style>


    <!--    exit alert dialog theme-->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>


    <!--    no internet theme-->
    <style name="NoInternetTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>